---
const { categoria } = Astro.props;
---

<div class="shadow-lg rounded-lg w-full sm:w-4/12 p-4 text-center">
  <a href={`categoria/${categoria.slug}/`} >
    <img
      class="mx-auto mb-4 rounded-2xl w-full h-auto"
      src={categoria.imagen}
      alt={categoria.nombre}
      
      
    />
    <h3 class="text-lg md:text-xl font-extrabold text-amber-600">{categoria.nombre}</h3>
  </a>
</div>
